pipeline {
    agent {
        label 'gcp_node'
    }

    environment {
        AWS_ACCOUNT_ID='738917964840'
        AWS_DEFAULT_REGION='ap-southeast-2'
        REPO_IMAGE_NAME='gamera_be'
        REPO_IMAGE_TAG='latest'
        AWS_CREDENTIALS="AWS_CREDENTIAL_JENKINS_CICD"
        aws_ecr_docker_password_stdin='aws_ecr_docker_password_stdin'
        SPRING_DATASOURCE_URL='SPRING_DATASOURCE_URL'
        SPRING_DATASOURCE_USERNAME='SPRING_DATASOURCE_USERNAME'
        SPRING_DATASOURCE_PASSWORD='SPRING_DATASOURCE_PASSWORD'
        ECR_PASSWORD_STDIN = credentials('ECR_PASSWORD_STDIN')
    }

    stages {
        stage('building image') {
            steps {
                echo 'Building docker images'
                sh 'aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${ECR_PASSWORD_STDIN}'
                sh 'docker build  --build-args SPRING_DATASOURCE_URL=${SPRING_DATASOURCE_URL} --build-args SPRING_DATASOURCE_USERNAME=${SPRING_DATASOURCE_USERNAME} --build-args SPRING_DATASOURCE_PASSWORD=${SPRING_DATASOURCE_PASSWORD} -t ${REPO_IMAGE_NAME}:${REPO_IMAGE_TAG} --no-cache .'
            }
        }
        stage('Pushing to ECR') {
            steps {
                echo 'pushing image to ECR'
                sh 'docker tag ${REPO_IMAGE_NAME}:${REPO_IMAGE_TAG} ${aws_ecr_docker_password_stdin}/${REPO_IMAGE_NAME}:${REPO_IMAGE_TAG}'
                sh 'docker push ${aws_ecr_docker_password_stdin}/${REPO_IMAGE_NAME}:${REPO_IMAGE_TAG}'
            }
        }
        // stage('Deploying to ECS') {
        //     steps {
        //         echo 'deploying image to ECS cluster service'
        //         sh 'aws ecs update-service --cluster gamera_be_cluster --service gamera_be_service --force-new-deployment'
        //     }
        // }
        // stage('Clean old Image') {
        //     steps {
        //         sh 'docker image ls'
        //         sh 'docker image prune --force --filter "until=2h"'
        //         echo "No image to delete..." 
        //     }
        // }
    }
}